
<style>

:root {
    --numberSize: 2rem;
    --monthSize: 1rem;
    --containerSize: 5rem;
}

.container_row .title {
    color: rgb(255, 255, 255);
    font-size: var(--numberSize);
}
.container_row .titleMonth {
    color: rgb(255, 255, 255);
    margin-top: 8%;
    font-size: var(--monthSize);
}
.container_row .fas {
    font-size: var(--containerSize);
}

.container_row{
    height: var(--containerSize);
    width: var(--containerSize);
    display: grid;
}

.container_row .layer1, .layer2, .layer3{
  grid-column: 1;
  grid-row: 1;
}

.container_row .layer1 {
    max-width: var(--containerSize);
    max-height: var(--containerSize);
    display: flex;
    justify-content: center;
    align-items: center;
}

.container_row .layer2 {
    max-width: var(--containerSize);
    max-height: var(--containerSize);
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.container_row .layer3 {
    max-width: var(--containerSize);
    max-height: var(--containerSize);
    display: flex;
    justify-content: center;
    align-items: flex-start;
}
</style>

<body>
    <div class="container_row">
        <div class="layer1">
            <i class="fas fa-calendar"></i>
        </div>
        <div class="layer2">
            <h1 class="title" id="dayPlace"></h1>
        </div>
        <div class="layer3">
            <h6 class="titleMonth" id="monthPlace"></h6>
        </div>
    </div>
</body>
</html>
<script>
    dateArray = new Date().toDateString().split(" ");
    day = dateArray[2];
    month = dateArray[1];

    document.getElementById("dayPlace").innerHTML = day;
    document.getElementById("monthPlace").innerHTML = month;
</script>