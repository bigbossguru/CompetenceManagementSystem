<div class="list-exports container-fluid container-md mt-5 mb-5">
    <div class="d-flex">
        <h2>Export list</h2>
        <button 
            class="list-button text-dark"
            data-bs-toggle="collapse" 
            data-bs-target="#listExports"  
            aria-controls="listExports"
            >
            <i class="fas fa-outdent mx-2"></i>
        </button>
    </div>
    <hr class="m-0">
    <div class="container-fluid container-md p-0 tableResponsive">
        <div id="listExports" class="row collapse">
            <div class="col-12">
                <table class="table table-light table-striped table-hover table-bord" style="min-width: 600px;">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Short name</th>
                        <th scope="col">Context</th>
                        <th scope="col">Relevancy</th>
                        <th scope="col">Values</th>
                        <th scope="col">Admin</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <th scope="row">1</th>
                        <td>Free text</td>
                        <td>CVM_2022_01_A</td>
                        <td>rel</td>
                        <td>value</td>
                        <td><i class="fas fa-times-circle"></i></td>
                      </tr>
                      <tr>
                        <th scope="row">2</th>
                        <td>Free text</td>
                        <td>CVM_2022_02_A</td>
                        <td>rel</td>
                        <td>value</td>
                        <td><i class="fas fa-times-circle"></i></td>
                      </tr>
                      <tr>
                        <th scope="row">2</th>
                        <td>Free text</td>
                        <td>CVM_2022_03_A</td>
                        <td>rel</td>
                        <td>value</td>
                        <td><i class="fas fa-check-circle"></i></td>
                      </tr>
                    </tbody>
                  </table>
                <div class="row d-flex justify-content-start m-2">
                    <button type="button" class="btn btn-primary w-50 mb-2"
                    data-bs-toggle="collapse" 
                    data-bs-target="#addReport"  
                    aria-controls="addReport"
                    style="max-width: 200px;">ADD REPORT</button>
                </div>
                <form class="collapse p-2" id="addReport">
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <label for="name" class="form-label">Short name</label>
                            <input type="text" class="form-control" id="exampleInputName" aria-describedby="name">
                        </div>
                        <div class="col-12 col-sm-6">
                            <label for="name" class="form-label">Context</label>
                            <input type="text" class="form-control" id="exampleInputName" aria-describedby="name">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <label for="name" class="form-label">Relevancy</label>
                            <input type="text" class="form-control" id="exampleInputName" aria-describedby="name">
                        </div>
                        <div class="col-12 col-sm-6">
                            <label for="name" class="form-label">Values</label>
                            <input type="text" class="form-control" id="exampleInputName" aria-describedby="name">
                        </div>
                    </div>
                    <div class="mt-2 mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Admin ?</label>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-50" style="max-width: 200px;">ADD</button>
                    </div>
                  </form>
            </div>
        </div>
    </div>
</div>